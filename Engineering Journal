\author{Your Name}

% Define a new environment for the daily log
\newenvironment{dailylog}[1]{
    \newpage % Start each daily log on a new page
    \maketitle
    \section*{Daily Log - #1}
    \begin{enumerate}[label=\textbf{\arabic*.}]
}{
    \end{enumerate}
    \vspace{\fill}
}

